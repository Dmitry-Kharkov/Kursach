<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">


    <changeSet id="APPLICANT-001" author="vyushin_aa">
        <preConditions>
            <not>
                <sequenceExists schemaName="REPOSITORY" sequenceName="APPLICANT_SEQ" />
            </not>
        </preConditions>

        <createSequence schemaName="REPOSITORY" sequenceName="APPLICANT_SEQ" startValue="0"/>
    </changeSet>

    <changeSet id="APPLICANT-002" author="vyushin_aa">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="APPLICANT"/>
            </not>
        </preConditions>

        <createTable tableName="APPLICANT">
            <column name="APPLICANT_ID" type="INT" defaultValueSequenceNext="APPLICANT_SEQ">
                <constraints primaryKey="true" primaryKeyName="APPLICANT_PK"/>
            </column>

            <column name="NAME" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="DESCRIPTION" type="VARCHAR(4056)"/>

            <column name="USER_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="TYPE_TEAM_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="IS_COMPLETED" type="BOOL" defaultValue="FALSE">
                <constraints nullable="false"/>
            </column>

            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>