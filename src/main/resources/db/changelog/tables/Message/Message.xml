<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">


    <changeSet id="MESSAGE-001" author="harkov_dv">
        <preConditions>
            <not>
                <sequenceExists schemaName="REPOSITORY" sequenceName="MESSAGE_ID_SEQ" />
            </not>
        </preConditions>

        <createSequence schemaName="REPOSITORY" sequenceName="MESSAGE_ID_SEQ" startValue="0"/>
    </changeSet>

    <changeSet id="MESSAGE-002" author="harkov_dv">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="MESSAGE"/>
            </not>
        </preConditions>

        <createTable tableName="MESSAGE">
            <column name="MESSAGE_ID" type="INT" defaultValueSequenceNext="MESSAGE_SEQ">
                <constraints primaryKey="true" primaryKeyName="MESSAGE_PK"/>
            </column>

            <column name="FROM_USER_ID" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="TO_USER_ID" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="TEXT" type="VARCHAR(4056)"/>

            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>