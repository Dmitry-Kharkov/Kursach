<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="USER_ROLE-001" author="harkov-dv">

        <preConditions>
            <tableIsEmpty schemaName="REPOSITORY" tableName="USER_ROLE"/>
        </preConditions>


        <insert schemaName="REPOSITORY" tableName="USER_ROLE">
            <column name="USER_ID" valueComputed="SELECT USER_ID FROM REPOSITORY.USERS WHERE LOGIN='harkov_dv'" />
            <column name="ROLE_ID" valueComputed="SELECT ROLE_ID FROM REPOSITORY.ROLE WHERE NAME='ADMIN' "/>
        </insert>


    </changeSet>
</databaseChangeLog>
