<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="ROLE-001" author="harkov-dv">

        <preConditions>
            <tableIsEmpty schemaName="REPOSITORY" tableName="ROLE"/>
        </preConditions>


        <insert schemaName="REPOSITORY" tableName="ROLE">
            <column name="NAME" value="ADMIN" />
            <column name="DESCRIPTION" value="Администратор имеет доступ ко всем командам разработчика." />
            <column name="ROLE_TYPE_ID" value="0"/>
        </insert>

        <insert schemaName="REPOSITORY" tableName="ROLE">
            <column name="NAME" value="MODERATOR" />
            <column name="DESCRIPTION" value="Модератор имеет доступ к добавлению новых типов команд, ролей." />
            <column name="ROLE_TYPE_ID" value="0"/>
        </insert>

        <insert schemaName="REPOSITORY" tableName="ROLE">
            <column name="NAME" value="USER" />
            <column name="DESCRIPTION" value="Обычный пользователь, может редактировать только свои объявления." />
            <column name="ROLE_TYPE_ID" value="0"/>
        </insert>


    </changeSet>
</databaseChangeLog>