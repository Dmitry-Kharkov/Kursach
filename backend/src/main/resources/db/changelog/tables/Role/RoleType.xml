<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">


    <changeSet id="ROLE_TYPE-001" author="vyushin_aa">
        <preConditions>
            <not>
                <sequenceExists schemaName="REPOSITORY" sequenceName="ROLE_TYPE_SEQ" />
            </not>
        </preConditions>

        <createSequence schemaName="REPOSITORY" sequenceName="ROLE_TYPE_SEQ" startValue="0"/>
    </changeSet>

    <changeSet id="ROLE_TYPE-002" author="vyushin_aa">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="ROLE_TYPE"/>
            </not>
        </preConditions>

        <createTable tableName="ROLE_TYPE">
            <column name="ROLE_TYPE_ID" type="INT" defaultValueSequenceNext="ROLE_TYPE_SEQ">
                <constraints primaryKey="true" primaryKeyName="ROLE_TYPE_PK"/>
            </column>

            <column name="NAME" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="DESCRIPTION" type="VARCHAR(4056)"/>

            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>